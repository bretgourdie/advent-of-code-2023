<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>advent_of_code_2023</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Day01\example.txt" />
    <None Remove="Day01\input.txt" />
    <None Remove="Day02\example.txt" />
    <None Remove="Day02\input.txt" />
    <None Remove="Day03\example.txt" />
    <None Remove="Day03\input.txt" />
    <None Remove="Day04\example.txt" />
    <None Remove="Day04\input.txt" />
    <None Remove="Day06\example.txt" />
    <None Remove="Day06\input.txt" />
    <None Remove="Day07\example.txt" />
    <None Remove="Day07\input.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Day04\example.txt" />
    <EmbeddedResource Include="Day04\input.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Day01\example.txt">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Day01\input.txt">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Day02\example.txt">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Day02\input.txt">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Day03\example.txt" />
    <EmbeddedResource Include="Day03\input.txt" />
    <EmbeddedResource Include="Day06\example.txt" />
    <EmbeddedResource Include="Day06\input.txt" />
    <EmbeddedResource Include="Day07\example.txt" />
    <EmbeddedResource Include="Day07\input.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="coverlet.collector" Version="6.0.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.8.0" />
    <PackageReference Include="NUnit" Version="3.14.0" />
    <PackageReference Include="NUnit.Analyzers" Version="3.9.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="NUnit.Framework" />
  </ItemGroup>

</Project>
